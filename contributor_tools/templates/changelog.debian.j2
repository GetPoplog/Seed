{% for entry in entries %}
poplog ({{ entry.version }}-1) unstable; urgency=medium

  {{ entry.description|trim|wordwrap(width=78, wrapstring="\n  ") }}

  {% if entry.changes|length > 0 %}
  Changes:
  {% for change in entry.changes %}
  * {{ change|trim|wordwrap(width=76, wrapstring="\n    ")}}
  {% endfor %}
  {% endif %}
  {% if entry.bugfixes|length > 0 %}

  Bugfixes:
  {% for bugfix in entry.bugfixes %}
  * {{ bugfix|trim|wordwrap(width=76, wrapstring="\n    ") }}
  {% endfor %}
  {% endif %}

 -- {{ entry.author }} <{{ entry.author_email }}>  {{ entry.datetime.strftime('%a, %d %b %Y %H:%M:%S +0000') }}
 {% if not loop.last %}

 {% endif %}
 {% endfor %}
